<%= render @book %>

<div class="btn-group" role="group" aria-label="Basic example">
  <%= link_to "Edit this book", edit_book_path(@book), class: "btn btn-success" %>
  <%= link_to "Back to books", books_path, class: "btn btn-primary" %>
  <%= button_to "Remove this book", @book, method: :delete, class: "btn btn-danger" %>
</div>